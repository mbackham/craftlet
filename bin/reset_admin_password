#!/usr/bin/env ruby
# Quick script to reset admin password

require_relative '../config/environment'

puts "Resetting admin@example.com password..."

admin = AdminUser.find_by(email: 'admin@example.com')

if admin
  admin.password = 'password'
  admin.password_confirmation = 'password'
  
  if admin.save
    puts "✅ Password reset successfully!"
    puts "   Email: admin@example.com"
    puts "   Password: password"
  else
    puts "❌ Failed to save: #{admin.errors.full_messages.join(', ')}"
  end
else
  puts "❌ Admin user not found. Creating new one..."
  AdminUser.create!(
    email: 'admin@example.com',
    password: 'password',
    password_confirmation: 'password'
  )
  puts "✅ Admin user created!"
end
